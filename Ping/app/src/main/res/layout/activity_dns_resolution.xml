<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dns_resolution.view.DnsResolution">

    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:hint="Server Name"
                android:inputType="text"
                android:padding="10dp"
                app:layout_flexGrow="5" />

            <Button
                android:id="@+id/dnsPingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/colorAccent"
                android:padding="0dp"
                android:text="Ping"
                app:layout_flexShrink="1" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/dnsAddButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:padding="0dp"
                android:text="Add"
                app:layout_flexGrow="1" />

            <Button
                android:id="@+id/dnsExportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:padding="0dp"
                android:text="Export"
                app:layout_flexGrow="1" />

            <Button
                android:id="@+id/dnsClearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:padding="0dp"
                android:text="Clear"
                app:layout_flexGrow="1" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/dnsTrancoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:padding="0dp"
                android:text="Top 10 Tranco Sites"
                app:layout_flexGrow="1" />
        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchBar"
        android:scrollbars="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/Grey"
                android:paddingStart="14dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="A RECORD"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/aRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="Edain Mobile"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/Grey"
                android:paddingLeft="14dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="SOA RECORD"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/soaRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="@string/app_name"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/Grey"
                android:paddingLeft="14dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="MX RECORD"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/mxRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="@string/app_name"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/Grey"
                android:paddingLeft="14dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="NS RECORD"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/nsRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="@string/app_name"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/Grey"
                android:paddingLeft="14dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="TXT RECORD"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="@string/app_name"
                android:textAlignment="textStart" />
        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:theme="@style/AppTheme.progressbar"
        android:visibility="invisible">

    </ProgressBar>

</RelativeLayout>